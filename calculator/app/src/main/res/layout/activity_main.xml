<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hi.calculator.MainActivity">

    <EditText
        android:id="@+id/billAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/percentid"
        android:layout_width="204dp"
        android:layout_height="28dp"
        android:text="@string/tip_calculator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/billAmount"
        app:layout_constraintHorizontal_bias="0.288" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="310dp"
        android:layout_height="20dp"
        tools:layout_editor_absoluteX="52dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/percentid" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="117dp"
        android:layout_height="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/calculate_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/percentid"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="274dp"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintVertical_bias="0.501" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:text="TextView"
        android:layout_marginTop="87dp"
        app:layout_constraintTop_toBottomOf="@+id/calculate"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.563" />

    <TextView
        android:id="@+id/seekbarview"
        android:layout_width="93dp"
        android:layout_height="42dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="52dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/calculate" />

</android.support.constraint.ConstraintLayout>
